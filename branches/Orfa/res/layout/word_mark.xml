<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/buttonErrorOmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onClickErrorOmit"
        android:text="@string/error1" />

    <Button
        android:id="@+id/buttonErrorWordOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickErrorWordOrder"
        android:text="@string/error2" />

    <Button
        android:id="@+id/buttonErrorMispronounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickErrorMispronounce"
        android:text="@string/error3" />

    <Button
        android:id="@+id/buttonErrorHesitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickErrorHesitate"
        android:text="@string/error4" />

    <Button
        android:id="@+id/buttonErrorSelfCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickErrorSelfCorrect"
        android:text="@string/error5" />

    <Button
        android:id="@+id/buttonMarkCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickMarkCorrect"
        android:text="@string/clear_incorrect" />

    <Button
        android:id="@+id/buttonLastRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickLastRead"
        android:text="@string/last_read" />

</LinearLayout>