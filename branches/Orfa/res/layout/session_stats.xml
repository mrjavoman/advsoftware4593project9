<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:weightSum="3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1" 
            android:text="Correct Words"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:textColor="#4169e1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textAppearance="?android:attr/textAppearanceLarge"  
            android:text="Incorrect Words" 
	        android:textColor="#4169e1" />/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1"  
            android:text="Length Avg"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#4169e1" />/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:weightSum="3"
        android:layout_gravity="center"
        android:orientation="horizontal" > 
        
        <TextView
	        android:id="@+id/corr_words"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1"  
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	    <TextView
	        android:id="@+id/incorr_words"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1"  
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceLarge"/>

	    <TextView
	        android:id="@+id/avg_length"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1"  
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
   		android:background="@android:color/darker_gray"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:weightSum="3"
        android:orientation="horizontal" >
    
	    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1" 
        	android:layout_marginTop="2dp" 
	        android:orientation="vertical" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Word Errors: "
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:textColor="#4169e1" />
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_word_one"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:text="Word 1: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_word_two"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:text="Word 2: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_word_three"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:text="Word 3: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_word_four"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:text="Word 4: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_word_five"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:text="Word 5: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    </LinearLayout>
    
	    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1" 
        	android:layout_marginTop="2dp" 
	        android:orientation="vertical" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp" 
	        android:text="Rule Errors:" 
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#4169e1" />
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/incorr_rule_one"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"
	        android:text="Rule 1: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_rule_two"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"
	        android:text="Rule 2: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_rule_three"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"
	        android:text="Rule 3: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_rule_four"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"
	        android:text="Rule 4: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/incorr_rule_five"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"
	        android:text="Rule 5: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    </LinearLayout>
    
	    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
	        android:layout_weight="1" 
        	android:layout_marginTop="2dp" 
	        android:orientation="vertical" >

		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        	android:layout_marginLeft="10dp" 
		        android:text="Error Types:"
	        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="#4169e1" />
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        	android:layout_marginLeft="10dp" 
			        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		        
		        <TextView
			        android:id="@+id/errType_one"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
		
			    <TextView
			        android:id="@+id/errType_one_count"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        	android:layout_marginLeft="10dp" 
			        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		        
		        <TextView
			        android:id="@+id/errType_two"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
		
			    <TextView
			        android:id="@+id/errType_two_count"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        	android:layout_marginLeft="10dp" 
			        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		        
		        <TextView
			        android:id="@+id/errType_three"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
		
			    <TextView
			        android:id="@+id/errType_three_count"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        	android:layout_marginLeft="10dp" 
			        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		        
		        <TextView
			        android:id="@+id/errType_four"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
		
			    <TextView
			        android:id="@+id/errType_four_count"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        	android:layout_marginLeft="10dp" 
			        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		        
		        <TextView
			        android:id="@+id/errType_five"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
		
			    <TextView
			        android:id="@+id/errType_five_count"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>

	    </LinearLayout>
    </LinearLayout>

    <Button 
	    android:id="@+id/buttonSaveSession"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Done"
	    android:onClick="onSaveSession"/>

</LinearLayout>